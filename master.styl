@import url(http://fonts.googleapis.com/css?family=Raleway:200)


vendor(prop, args) 
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  -ms-{prop} args
  {prop} args

border-radius()
	vendor('border-radius', arguments)

box-shadow()
	vendor('box-shadow', arguments)
	
animation()
	vendor('animation', arguments)
	
transition()
	vendor('transition', arguments)

*
	margin:0
	padding:0
	font-family: 'Raleway', Times
	font-weight:200
	z-index:2
	
a
	color:black
	text-decoration:none

body
	background:#27F
	min-height:100vh // Fix for Safari
	animation: grad 30s infinite linear
	// -webkit-animation: grad 30s infinite linear
	// -moz-animation: grad 30s infinite linear
	// -o-animation: grad 30s infinite linear
	
	&::selection
		background: none
		
	&::-moz-selection
		background: none
	
*, html
	
	&::selection
		background: none
		
	&::-moz-selection
		background: none
			
		
#background
	position:fixed
	top:0px
	left:0px
	height:100vh
	width:100%
	z-index:-1
	background: url(alum.png)
	background-repeat: repeat
	opacity: 1
	
nav
	position:relative
	top:20vh
	font-size:80px
	text-align:center
	list-style:none
	width:600px
	margin:auto
	
	a
		color:black
		text-decoration:none

	li
		position:relative
		cursor: pointer
		padding: 5px 0px
	
		&:hover
			background: rgba(255,255,255,.3)
			
			span
				display:block
	
		span
			position:fixed
			width:100%
			bottom:3vh
			left:0px
			display:none
			color:black

#contact.backup, #portfolio.backup, #photo.backup
	display:block
	opacity:1
	
.backup nav
	top:10vh
			
#contact, #portfolio, #photo
	display:none
	opacity: 0
	position:absolute
	top:30vh
	text-align:center
	font-size: 40px
	width:100%
	
	ul
	
		list-style:none
		text-align:center
	
		li 
			padding-bottom: 10px
			padding-top:10px
			margin:auto
			width:600px
			position:relative
			
			&:hover
				background: rgba(255,255,255,.3)
				
				span
					display:block
					
			span
				position:fixed
				width:100%
				bottom:6vh
				left:0px
				display:none
				opacity: 0.6
				
		.twitter img
			height: 110px
			padding-bottom:15px
		
		.github img
			height: 140px
		
		.email img
			height:80px
			padding-bottom:25px
			
#portfolio
	span
		opacity:1
		font-size:25px
		
		
		
#photo

	span
		opacity:0
		position:relative
		top:320px
		left:0.5%
		transition: opacity 0.5s // ease-in-out
	
	#photo_container:hover ~ span
		opacity:1
		
	#photo_container
		width:300px
		margin:auto
		text-align:center
		position:relative
		
		img
			position:absolute
			top:0vh
			left:0px
			border-radius:2000px
			width: 300px
		
		#photo1
			opacity:1
			transition: opacity 0.5s
			
			&:hover
				opacity:0
			
		#photo2
			opacity:0
			transition: opacity 0.5s
			
			&:hover
				opacity:1
	


				
// Animations			
			
@keyframes grad
	0% { background: #27F }
	20% { background: #9900CC }
	40% { background: #FF5050 }
	60% { background: #E6E600 }
	80% { background: #52CC29 }
	100% { background: #27F }
	
@-wekbit-keyframes grad
	0% { background: #27F }
	20% { background: #9900CC }
	40% { background: #FF5050 }
	60% { background: #E6E600 }
	80% { background: #52CC29 }
	100% { background: #27F }
			
@-moz-keyframes grad
	0% { background: #27F }
	20% { background: #9900CC }
	40% { background: #FF5050 }
	60% { background: #E6E600 }
	80% { background: #52CC29 }
	100% { background: #27F }
	
@-o-keyframes grad
	0% { background: #27F }
	20% { background: #9900CC }
	40% { background: #FF5050 }
	60% { background: #E6E600 }
	80% { background: #52CC29 }
	100% { background: #27F }


