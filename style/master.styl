@import url(https://fonts.googleapis.com/css?family=Raleway:200)

vendor(prop, args) 
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  -ms-{prop} args
  {prop} args

border-radius()
	vendor('border-radius', arguments)

box-shadow()
	vendor('box-shadow', arguments)
	
animation()
	vendor('animation', arguments)
	
transition()
	vendor('transition', arguments)

*
	margin:0
	padding:0
	font-weight:300
	z-index:2
	
a
	color:black
	text-decoration:none

body
	font-family: 'Raleway', Courier
	background: url("/images/brushed.jpg")
	min-height:100vh // Fix for Safari
	// -webkit-animation: grad 30s infinite linear
	// -moz-animation: grad 30s infinite linear
	// -o-animation: grad 30s infinite linear
	
	&::selection
		background: none
		
	&::-moz-selection
		background: none
	
*, html
	
	&::selection
		background: none
		
	&::-moz-selection
		background: none
			
		
#background
	position:fixed
	top:0px
	left:0px
	height:100vh
	width:100%
	z-index:-1
	//background-repeat: repeat
	animation: grad 10s infinite linear
	opacity: 1


.post-list
  overflow-y:scroll
  max-height: 50vh

html body .post-title
  // max-width: 600px
  width:calc(100% + 50px)
  position:relative
  left: -50px
  border-top:80px solid rgba(255,255,255,0.4)
  text-align:center
  font-size: 80px
  display:block
  padding: 5px 0px
  padding-top: 30px
  padding-bottom: 30px
  box-shadow: inset 0px 0px 30px #555
  -moz-background-clip: padding;     /* Firefox 3.6 */
  -webkit-background-clip: padding;  /* Safari 4 */
  background-clip: padding-box;      /* Firefox 4, Safari 5, Opera 10, IE 9 */

  // font-family 
  &:hover
    cursor: pointer

  & *
	  font-family: "Raleway", Times
.post 
  //max-width: 600px
  // margin:auto
  min-height:100vh
  font-size: 30px

  *
	  &::selection
	  	background: rgba(black, 50%)
	  	
	  &::-moz-selection
      background: rgba(black, 50%)

.home-link
  position: absolute
  top:20px
  right:20px
  height: 40px
  width: 40px
  box-shadow: 0px 0px 8px #444
  z-index:30

.post .home-link
  box-shadow: 0px 0px 5px #777

.post::after
  content: "" 
  display:block
  height:80px
  box-shadow: inset 0px 0px 30px #555
  width: calc(100% + 50px)
  position: relative
  left: -50px


sep = 20px
.post-content
  background: #f1f1f1
  width:100%
  box-sizing:border-box
  padding: 70px
  border-left: 70px solid rgba(255,255,255,0.4)
  border-right: 70px solid rgba(255,255,255,0.4)

  -moz-background-clip: padding;     /* Firefox 3.6 */
  -webkit-background-clip: padding;  /* Safari 4 */
  background-clip: padding-box;      /* Firefox 4, Safari 5, Opera 10, IE 9 */
                
  // padding-top: 50px
  box-sizing: border-box
  p
    font-family: Times New Roman, Times
    font-size: 25px
    line-height: 1.2
    margin-bottom: sep
  &> p:first-of-type::first-letter 
    font-size: 64px
    padding-top: 5px
    padding-right: 5px
    line-height: 50px
    float:left
  h1
    font-size: 60px
    border-bottom: 1px solid black
    margin-bottom: 30px
  h2
    font-size: 40px
    margin-bottom: 10px
    font-family: Arial, Courier
    text-decoration: underline

  a
    text-decoration: underline

    &:hover
      color white
  
  code
    font-family: courier
    background: white
    border: 1px solid #888
    padding:2px;

  pre
    font-size 20px
    margin-bottom: 10px

    .line-numbers
      margin-right:10px
    code 
      background transparent
      border none
      padding none
        
  blockquote
    border-left: 8px solid rgba(black, 0.5)
    color: black
    padding-left: 15px
    padding-top: 15px
    padding-bottom: 5px
    margin-bottom: sep
    


